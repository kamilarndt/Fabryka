# NextFab Environment Variables Template
# Skopiuj ten plik do .env i wypełnij wartości

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Backend Configuration
BACKEND_URL=http://localhost:5000
BACKEND_PORT=5000

# Frontend Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nextfab

# Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# Development
NODE_ENV=development
DEBUG=true

# Speckle Integration (opcjonalne)
NEXT_PUBLIC_SPECKLE_SERVER=http://127.0.0.1:3002
NEXT_PUBLIC_SPECKLE_TOKEN=your_speckle_token

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (opcjonalne)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password